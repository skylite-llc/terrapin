    "typescript": "*"
  },
  "_moduleAliases": {
    "@config": "./dist/framework/config",
    "@controllers": "./dist/http/controllers",
    "@decorators": "./dist/framework/decorators",
    "@database": "./dist/framework/database",
    "@exceptions": "./dist/exceptions",
    "@middlewares": "./dist/http/middleware",
    "@repositories": "./dist/repositories",
    "@services": "./dist/services",
    "@transformers": "./dist/transformers"
  },
  "scripts": {
    "lint": "eslint ./src --fix",
    "format": "prettier --write \"./src/**/*.{js,jsx,ts,tsx}\"",
    "build": "yarn rimraf ./dist && tsc -p tsconfig.json && tsconfig-replace-paths --project tsconfig.json",
    "make": "node __commands/createFromTemplate.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "ts-node src/server.ts",
    "start:watch": "yarn nodemon --watch \"src/**\" --ext \"ts\" --ignore \"src/**/*.test.ts\" --exec \"ts-node src/server.ts\"\n",
    "start:prod": "node dist/server.js",
    "db:up": "ts-node src/infrastructure/framework/scripts/database/migrate-up.ts",
    "db:down": "ts-node src/infrastructure/framework/scripts/database/migrate-down.ts",
    "db:fresh": "ts-node src/infrastructure/framework/scripts/database/migrate-fresh.ts"
  },
  "publishConfig": {
    "access": "public"
  }
}
